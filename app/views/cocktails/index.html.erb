<center>
<h1>Cocktails - list</h1>
<div class="container">
  <div class="row">

  </div>
</div>
<% @cocktails.each do |cocktail| %>
    <div class="col-xs-12 col-md-4">
    <div class="card"
  style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
         url('<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill %>')">
  <div class="card-category">Popular</div>
  <div class="card-description">
    <h2><%= cocktail.name %></h2>
  </div>
  <%= link_to cocktail.name, cocktail_path(cocktail), class: "card-link" %>
</div>
    </div>
 <!-- # we re amking the nam eof each cocktail a link -->
<% end %>
<br><br>
<%= link_to "Create a new Cocktail", new_cocktail_path, class: " btn btn-success" %>
<br><br>
<hr>
</center>

<%= cl_image_tag("THE_IMAGE_ID_FROM_LIBRARY",
  width: 400, height: 300, crop: :fill) %>

<%= cl_image_tag("IMAGE_WITH_FACE_ID",
  width: 400, height: 300, crop: :thumb, gravity: :face) %>


